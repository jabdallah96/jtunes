{% extends 'default/index.html.twig' %}

{% block body %}
    <div id="wrapper">
        </br>

        <h1><a href="{{ path('album_index') }}"> Album Viewer</a> -> Song Viewer</h1>

        <table id="albums">
            <tr>
                <td colspan=5><div id="flash-notice">{{ error }}</div></td>
            </tr>
            <tr>
                <th>Song Name</th>
                <th>Genre</th>
                <th>Year</th>
                <th>Artists</th>
                <th>My Rating</th>
            </tr>
            {% for song in songs %}
                <tr id={{ song.id }}>
                    <td>{{ song.name }}</td>
                    <td>{{ song.genre }}</td>
                    <td>{{ song.album.year }}</td>
                    <td>{{ song.artist.name }}</td>
                    <td>
                        <div id="rate">
                            <form>
                                <div class="rating-container">
                                    <select class="target" data-rating= {{ song.rating }} data-id="{{ song.id }}">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>

                            </form>
                        </div>
                    </td>

                </tr>
            {% endfor %}

        </table>

        <br><br>
    </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>

        $('select').each(function (index) {
            $(this).val($(this).data('rating'));

        });

        $(".target").change(function () {
            var songId;
            var rating;
            songId = $(this).data('id');
            rating = $(this).val();
            $.ajax({
                url: "{{ path('song_rating') }}",
                data: {"songId": $(this).data("id"), "rating": $(this).val()},
                type: "GET",
                success: function (data) {
                    $('#flash-notice').text(data.msg);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert('Error: ' + errorThrown);
                }
            });
        });


    </script>
{% endblock %}